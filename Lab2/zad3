

#include <iostream>
#include <vector>
#include <algorithm>

int main()
{
    //3.
    std::vector<int> Val = { 10,11,33,21,2,3,12,90,3,4,12,8,7 };
    std::sort(Val.begin(), Val.end(), [](int x, int y) { return x < y; });
    for (int num : Val)
    {
        std::cout << num << " ";
    }
    std::cout << std::endl << std::endl;
    std::sort(Val.begin(), Val.end(), [](int x, int y) { return x > y; });
    for (int num : Val)
    {
        std::cout << num << " ";
    }

    std::cout << std::endl << std::endl;
    std::sort(Val.begin(), Val.end(), [](int x, int y) { return (x%2==0 && x < y); } );
    for (int num : Val)
    {
        std::cout << num << " ";
    }


}

