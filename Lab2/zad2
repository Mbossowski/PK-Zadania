#include <iostream>

int main()
{
    //2.

    auto sum = [](int a, int b) -> int {
        return a+b;
    };

    auto avg = [](double a, double b) -> double {
        return double((a+b)/2);
    };


    int a, b;
    std::cout << "Podaj 2 liczby: ";
    std::cin >> a >> b;
    int i;
    std::cout << "Podaj dziaÅ‚anie ( 1 - suma | 2 - srednia): ";
    std::cin >> i;

    if(i==1)
    {
        std::cout << "Wynik: " << sum(a, b);
    }
    else if(i==2)
    {
        std::cout << "Wynik: " << avg(a, b);
    }

}

